doctype html
head
  meta(charset='utf-8')
  meta(name='x-apple-disable-message-reformatting')
  meta(http-equiv='x-ua-compatible' content='ie=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(name='format-detection' content='telephone=no, date=no, address=no, email=no')
  link(href='https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap' rel='stylesheet' media='screen')
  style.
    .title:hover * {
    text-decoration: underline;
    }
    @media only screen and (max-width:600px) {
    table {
    font-size: 20px !important;
    width: 100%!important;
    }
    }
div(style='display: block; background-color: #111827; padding: 2.5rem 0;')
  table(style='margin: 0 auto; font-family: Inter, Arial, sans-serif; color: #fff; font-size: 16px; width: 48rem;')
    tr
      td(style="text-align: center;" colspan='3')
        if applicationUrl
          a(href=applicationUrl style='margin: 0 1rem;')
            img(src=applicationUrl +'/jellyfin_full.png' style='width: 20rem; image-rendering: crisp-edges; image-rendering: -webkit-optimize-contrast;')
        else
          div(style='margin: 0 1rem 2.5rem; font-size: 3em; font-weight: 700;')
            | #{applicationTitle}
    if recipientName !== recipientEmail
      tr
        td(style='text-align: center;' colspan='3')
          div(style='margin: 1rem 0 0; font-size: 1em;')
            | #{translations.greeting}
    tr
      td(style='text-align: center;' colspan='3')
        div(style='margin: 1rem 0 0; font-size: 1em;')
          | #{translations.accessInfo}
        div(style='margin: 1rem 0 0; font-size: 1em; font-weight: 500; line-height: 2.25em;')
          span(style='padding: 0.5rem; font-weight: 500; border: 1px solid rgb(100,100,100); font-family: monospace;')
            | #{recipientName} | #{password}
    tr
      td(style='text-align: center;' colspan='3')
        div(style='margin: 1rem 0 2rem; font-size: 1em;' )
          | #{translations.passwordInfo}
    if applicationUrl
      tr
        td(style='padding: 0px 20px; text-align: center; vertical-align: top;')
          p(style='width: 23.5rem; margin-bottom: 15px; ') #{translations.jellyseerrInfo}
          img(src=applicationUrl +'/jellyseerr_preview_mobile.jpg' style='width: 10rem; image-rendering: crisp-edges; image-rendering: -webkit-optimize-contrast; margin-bottom: 15px; border-radius: 10px;')
          a(href=applicationUrl style='display: block; margin: 0 auto; text-decoration: none; max-width: 200px;')
            span(style='padding: 0.75rem; font-weight: 500; text-align: center; border-radius: 10px; background-color: rgb(99,102,241); color: #fff; display: block; border: 1px solid rgba(255,255,255,0.2);')
              | #{translations.openJellyseerr}

        td(style='width: 1px; background-color: #e5e7eb;')

        td(style='padding: 0px 20px; text-align: center; vertical-align: top;')
          p(style='width: 23.5rem; margin-bottom: 15px;') #{translations.jellyfinInfo}
          img(src=applicationUrl +'/jellyfin_preview_mobile.jpg' style='width: 10rem; image-rendering: crisp-edges; image-rendering: -webkit-optimize-contrast; margin-bottom: 15px; border-radius: 10px;')
          a(href=jellyfinUrl style='display: block; margin: 0 auto; text-decoration: none; max-width: 200px;')
            span(style='padding: 0.75rem; font-weight: 500; text-align: center; border-radius: 10px; background-color: rgb(99,102,241); color: #fff; display: block; border: 1px solid rgba(255,255,255,0.2);')
              | #{translations.openJellyfin}
    tr
      td(style='text-align: center;' colspan='3')
        div(style='margin: 3rem 0 0; font-size: 0.75em;')
          | #{translations.downloads}
        div(style='margin: 1rem auto; max-width: 600px; font-size: 0.75em;')
          div(style='display: flex; justify-content: center; align-items: center; gap: 10px; flex-wrap: wrap;')
            a(href='https://play.google.com/store/apps/details?id=org.jellyfin.mobile' style='color: #fff; text-decoration: none;') Android
            span(style='color: #FFF; margin: 0px 5px') |
            a(href='https://play.google.com/store/apps/details?id=org.jellyfin.androidtv' style='color: #fff; text-decoration: none;') Android TV
            span(style='color: #FFF; margin: 0px 5px') |
            a(href='https://www.amazon.com/gp/aw/d/B081RFTTQ9' style='color: #fff; text-decoration: none;') Amazon Fire TV
            span(style='color: #FFF; margin: 0px 5px') |
            a(href='https://apps.apple.com/us/app/jellyfin-mobile/id1480192618?mt=8' style='color: #fff; text-decoration: none;') iOS
            span(style='color: #FFF; margin: 0px 5px') |
            a(href='https://apps.apple.com/ca/app/swiftfin/id1604098728' style='color: #fff; text-decoration: none;') Apple TV
            span(style='color: #FFF; margin: 0px 5px') |
            a(href='https://us.lgappstv.com/main/tvapp/detail?appId=1030579' style='color: #fff; text-decoration: none;') LG webOS
    tr
      td(style='text-align: center;' colspan='3')
        div(style='margin: 1rem 0 0; font-size: 0.75em;')
          | #{translations.warning}
